<%- include("partials/_header") %>

<div class="col-md-7">
  <table>
    <thead>
      <tr>
        <td>N°</td>
        <td>Nombre</td>
        <td>Destino</td>
        <td>Fecha de ida</td>
        <td>Fecha de vuelta</td>
        <td>Acción</td>
      </tr>
    </thead>
    <tbody>
      <% if (reservas && reservas.length > 0) { %>
        <% reservas.forEach((reserva, i) => { %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= reserva.nombre %></td>
            <td><%= reserva.destino %></td>
            <td><%= reserva['Fecha de Ida'] %></td> <!-- Mostrar fecha formateada -->
            <td><%= reserva['Fecha de Vuelta'] %></td> <!-- Mostrar fecha formateada -->
            <td class="d-flex gap-2">
              <a href="/edit/<%= reserva.idReservas %>" class="btn-btn-primary">Editar</a>
              <form action="/delete/<%= reserva.idReservas %>" method="POST">
                <button type="submit" class="btn-btn-danger">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="6">No hay reservas disponibles.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("partials/_footer") %>