<%- include("partials/_header") %>

<div class="col-md-7">
    <table>
      <thead>
        <tr>
          <td>N°</td>
          <td>Nombre</td>
          <td>Destino</td>
          <td>Fecha de ida</td>
          <td>Fecha de vuelta</td>
          <td>Acción</td>
        </tr>
      </thead>
      <tbody>
        <% if (customers && customers.length > 0) { %>
          <% customers.forEach((customer, i) => { %>
            <tr>
              <td><%= (i + 1) %></td>
              <td><%= customer.nombre %></td>
              <td><%= customer.Destino %></td>
              <td><%= customer.fechaida %></td>
              <td><%= customer.fechavuelta %></td>
              <td class="d-flex gap-2">
                <a href="/edit/<%= customer.idReservas %>" class="btn-btn-primary">Editar</a>
                <form action="/delete/<%= customer.idReservas %>" method="POST">
                  <button type="submit">Eliminar</button>
                </form>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr><td colspan="6">No hay reservas disponibles.</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>

<%- include("partials/_footer") %>